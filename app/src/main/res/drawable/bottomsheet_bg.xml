<!-- bottom_sheet_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corner radius for top-left and top-right corners -->
    <corners
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp" />

    <!-- Background color, you can adjust this as needed -->
    <solid android:color="@android:color/white" />

    <!-- Optionally, you can add padding if needed -->
    <padding
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp" />
</shape>
